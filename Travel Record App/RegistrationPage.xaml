<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel_Record_App.RegistrationPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="First Name" Keyboard="Text"/>
            <Entry Placeholder="Last Name" Keyboard="Text"/>
            <Entry Placeholder="UserName" Keyboard="Text"/>
            <Entry Placeholder="Phone Number" Keyboard="Telephone"/>
            <Entry Placeholder="Email" Keyboard="Email"/>
            <Entry Placeholder="Password" IsPassword="True"/>
            <Entry Placeholder="Confirm Password" IsPassword="True"/>
            <Button Text="Register" Style="{StaticResource loginButton}" x:Name="registerButton" Clicked="registerButton_Clicked"/>
            <Button Text="Login" Style="{StaticResource registerButton}"  x:Name="loginButton" Clicked="loginButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>