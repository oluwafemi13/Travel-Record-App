<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel_Record_App.MainPage" >

    <StackLayout HorizontalOptions="Center"
                   WidthRequest="600" BackgroundColor="{StaticResource black}">



        <Entry Placeholder="Username" Margin="20,200,20,20" FontSize="20" x:Name="username" Keyboard="Email" TextColor="{StaticResource white}" PlaceholderColor="{StaticResource blurrwhite}"/>
        <Entry Placeholder="Password" Margin="20,0" x:Name="password" IsPassword="True" TextColor="{StaticResource white}" PlaceholderColor="{StaticResource blurrwhite}"/>

        <!--<Button Text="Login"  BackgroundColor="{StaticResource green}" TextColor="{StaticResource white}" FontAttributes="Bold" FontSize="20" Margin="20,40,20,0" x:Name="login" Clicked="login_Clicked" />-->
        <Button Text="Login"  Style="{StaticResource loginButton}" FontAttributes="Bold" FontSize="20" Margin="20,40,20,0" x:Name="login" Clicked="login_Clicked" />
        <Label Text="Dont have an Account?" Margin="20,20" HorizontalTextAlignment="Center" TextColor="{StaticResource white}"/>
        <Button Text="Register" BackgroundColor="{StaticResource blue}" TextColor="{StaticResource white}" Margin="20,0" FontAttributes="Bold" FontSize="20" x:Name="register" Clicked="register_Clicked"/>
    </StackLayout>

</ContentPage>
